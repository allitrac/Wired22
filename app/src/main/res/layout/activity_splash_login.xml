<?xml version="1.0" encoding="utf-8"?>
    <!--Background Lines and LinearLayout for LOGIN-->
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashLoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/my_splash_login_translucent_background">

        <ImageView
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO" />

        <ImageView
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:contentDescription="TODO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pic_logo_wired_colored"
            android:background="@color/white"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <RelativeLayout
            android:id="@+id/loginRelLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/webColorBG"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cvLoginTitle"
                android:layout_centerInParent="true"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:fontFamily="serif"
                    android:textStyle="normal|bold"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="50sp"/>

            </android.support.v7.widget.CardView>
            <!--Username Area LinearLayout-->
            <LinearLayout
                android:id="@+id/linLayUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/cvLoginTitle"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:padding="4dp"
                    android:background="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop=".5dp"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/webColorBG"
                    android:inputType="text"/>

            </LinearLayout>

            <!--Password Area LinearLayout-->
            <LinearLayout
                android:id="@+id/linLayPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linLayUsername"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="password"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:padding="4dp"
                    android:background="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop=".5dp"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/webColorBG"
                    android:inputType="textPassword"/>

            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>